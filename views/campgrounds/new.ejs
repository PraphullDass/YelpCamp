<%- include("./../partials/header"); %>

<div class="container my-4">
	<div class="row justify-content-center">
		<h1 class="col-12 text-center">Create new Camp ground</h1>
		<div class="col-10 col-lg-5 my-4">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="Name">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="image" placeholder="image url">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="price" placeholder="Price" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="description" placeholder="Name">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
				</div>
			</form>

			<a href="/campgrounds">Back</a>
		</div>
	</div>
</div>

<%- include("./../partials/footer"); %>