<%- include("./../partials/header"); %>

<div class="container my-4">
	<div class="row justify-content-center">
		<h1 class="col-12 text-center">Edit <%= campground.name %></h1>
		<div class="col-10 col-lg-5 my-4">
			<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="campground[name]" placeholder="Name" value="<%= campground.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="campground[image]" placeholder="image url" value="<%= campground.image %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="campground[price]" placeholder="Price" min="0.01" step="0.01" value="<%= campground.price %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="campground[description]" placeholder="Name" value="<%= campground.description %>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
				</div>
			</form>

			<a href="/campgrounds">Back</a>
		</div>
	</div>
</div>

<%- include("./../partials/footer"); %>